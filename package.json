{
  "name": "hbml-parser",
  "displayName": "HBML Parser",
  "description": "",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "DanWlker",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onCommand:hbml-parser.helloWorld",
    "onCommand:hbml-parser.convertHbmlToHtml",
    "workspaceContains:**/*.hbml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "hbml",
        "path": "./snippets/hbml.json"
      }
    ],
    "commands": [
      {
        "command": "hbml-parser.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "hbml-parser.convertHtmlBackToHbml",
        "title": "Convert current file HTML back to HBML"
      },
      {
        "command": "hbml-parser.convertHbmlToHtml",
        "title": "Convert current file HBML to HTML"
      },
      {
        "command": "hbml-parser.convertAllHtmlBackToHbml",
        "title": "Convert whole project HTML back to HBML"
      },
      {
        "command": "hbml-parser.convertAllHbmlToHtml",
        "title": "Convert whole project HBML to HTML"
      }
    ],
    "languages": [
      {
        "id": "hbml",
        "aliases": [
          "Hbml",
          "Hyper Braced Markup Language"
        ],
        "extensions": [
          ".hbml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hbml",
        "scopeName": "source.hbml",
        "path": "./syntaxes/hbml.tmLanguage.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DanWlker/hbml-parser-vscode"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
